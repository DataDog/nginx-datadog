#!/bin/sh

cd "$(dirname "$0")/../"

set -e

. ../nginx-version-info
export BASE_IMAGE

printf  "===============================\n"
printf  "Running test with:\n"
printf  " - ARCH=%s\n" "${ARCH}"
printf  " - BASE_IMAGE=%s\n" "${BASE_IMAGE}"
printf  "===============================\n"

docker compose build --parallel
python3 -m unittest "$@"
