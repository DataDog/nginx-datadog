#!/bin/sh

cd "$(dirname "$0")/../"

set -e

if [ $(echo ${RESTY_TEST}) = "ON" ] ; then
    . ../openresty-version-info
    export BASE_IMAGE
    export NGINX_MODULES_PATH="${NGINX_MODULES_PATH:-/usr/local/openresty/nginx/modules/}"
    export NGINX_CONF_PATH="${NGINX_CONF_PATH:-/usr/local/openresty/nginx/conf/nginx.conf}"
else
    . ../nginx-version-info
    export BASE_IMAGE
    export NGINX_MODULES_PATH="${NGINX_MODULES_PATH:-/usr/lib/nginx/modules}"
    export NGINX_CONF_PATH="${NGINX_CONF_PATH:-/etc/nginx/nginx.conf}"
fi


docker-compose build --parallel
docker-compose up --abort-on-container-exit
