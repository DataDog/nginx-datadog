<!--
    Datadog RUM configuration schema.
-->
<configSchema>
  <sectionSchema name="system.webServer/datadogRum">
    <attribute name="enabled" type="bool" defaultValue="true" />
    <!-- NOTE(@dmehala): arbitrarily set an upper bound because it is mandatory. -->
    <attribute name="version" type="int" defaultValue="5" validationType="integerRange" validationParameter="5,1000"/>

    <collection addElement="option" removeElement="remove" clearElement="clear" allowDuplicates="false">
      <attribute name="name" type="string" isUniqueKey="true" required="true" validationType="nonEmptyString" />
      <attribute name="value" type="string" required="true" validationType="nonEmptyString" />
    </collection>
  </sectionSchema>
</configSchema>
